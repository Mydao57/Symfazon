{% extends 'base.html.twig' %}

{% block title 'Symfazon' %}

{% block body %}
    <div class="min-h-screen flex flex-col">

        {% include 'utils/navbar.twig' %}

        <!-- Landing Section -->
        <section class="flex-1 flex items-center justify-center">
            <div class="container mx-auto flex items-center">
                <!-- Text Description -->
                <div class="w-1/2 pr-8">
                    <h1 class="text-4xl font-bold mb-4">Welcome to Symfazon</h1>
                    <p class="text-lg mb-8">Discover the latest trends and find your perfect style. Explore our wide range of clothing and shoes.</p>
                    <a href="{{ path('all_products') }}" class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-full">Explore</a>
                </div>

                <!-- Image -->
                <div class="w-1/2">
                    <img src="{{ asset('Symfazon-trans.png') }}" alt="Explore Image" class="w-full h-auto rounded-md">
                </div>
            </div>
        </section>
        {% include 'utils/footer.twig' %}
    </div>
{% endblock %}
